@model IEnumerable<Library.Model.Category>
@{
    ViewBag.Title = "لیست دسته ها";
}

@if (TempData["Message"] != null)
            {
    <div id="Message" class="col-md-12">
        <div class="alert alert-success text-center">
            <h2>@TempData["Message"]</h2>
        </div>
    </div>
}


<h2>لیست دسته ها</h2>
<div class="row">
    <div style="margin:10px;" class="col-md-2">
        <a href="http://localhost:9099/Admin/AddCategory" class="btn btn-info btn-block">
            افزودن دسته
        </a>
    </div>
</div>
<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>شماره دسته</th>
            <th>نام دسته</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Category_Name</td>
            </tr>
        }
    </tbody>

</table>

