@model IEnumerable<Library.Model.Book>
    @{
        ViewBag.Title = "لیست کتابها";
    }


<div class="panel-heading">
    <h3 class="panel-title">لیست کتابها</h3>
</div>
<div class="panel-body">
    <table class="table table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>شماره</th>
                <th>عنوان</th>
                <th>نام نویسنده</th>
                <th>ناشر</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Publisher</td>
                    <td>
                        <a href="@Url.Action("Delete","AddBook",new { id = book.Id})" class="btn btn-danger btn-xs">
                            <span class="glyphicon glyphicon-remove-circle" title="حذف"></span>
                        </a>
                        <a href="@Url.Action("Edit","AddBook",new { id = book.Id})" class="btn btn-primary btn-xs">
                            <span class="glyphicon glyphicon-pencil" title="ویرایش"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    </div>


