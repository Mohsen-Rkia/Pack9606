@model Library.WebUi.Areas.Administrator.ViewModels.AddBooksViewModels
@{
    ViewBag.Title = "ویرایش کتاب";
}

<div class="panel-heading">
    <h3 class="panel-title">حذف کتاب</h3>
</div>
<div class="panel-body">

    @using (Html.BeginForm("Books_List", "AddBook", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

