@model IEnumerable<Library.Model.ContactUs>

@{
    ViewBag.Title = "پیام ها";
}

<div class="panel-heading">
    <h3 class="panel-title">پیام ها</h3>
</div>


<div class="panel-body">
    <table class="table table-hover table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>عملیات</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    <a href="@Url.Action("Delete","ContactUs",new { id = item.Id})" class="btn btn-danger btn-xs">
                        <span class="glyphicon glyphicon-remove-circle" title="حذف"></span>
                    </a>
                    <a href="@Url.Action("Details","ContactUs",new { id = item.Id})" class="btn btn-info btn-xs">
                        <span class="glyphicon glyphicon-zoom-in" title="مشاهده"></span>
                    </a>
                    <a href="@Url.Action("Edit","ContactUs",new { id = item.Id})" class="btn btn-primary btn-xs">
                        <span class="glyphicon glyphicon-pencil" title="ویرایش"></span>
                    </a>
                </td>
            </tr>
        }

    </table>
    </div>
