@model IEnumerable<Library.Model.Circulation>
@{
    ViewBag.Title = "گردش ها";
}


<div class="panel-heading">
    <h3 class="panel-title">لیست گردش ها</h3>
</div>
<div class="panel-body">

    <table class="table table-hover table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Issue_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expire_Date)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.MemberId
                </td>
                <td>
                    @item.BookId
                </td>
                <td>
                    @item.Issue_Date
                </td>
                <td>
                    @item.Day_Number
                </td>
                <td>
                    @item.Expire_Date
                </td>
                <td>
                    <a href="@Url.Action("Delete","AddCirculations",new { id = item.Id})" class="btn btn-danger btn-xs">
                        <span class="glyphicon glyphicon-remove-circle" title="حذف"></span>
                    </a>
                    <a href="@Url.Action("Edit","AddCirculations",new { id = item.Id})" class="btn btn-primary btn-xs">
                        <span class="glyphicon glyphicon-pencil" title="ویرایش"></span>
                    </a>
                </td>
            </tr>
        }

    </table>
    </div>
