<div class="panel-heading">
    <h3 class="panel-title">لیست دسته ها</h3>
</div>

<div class="panel-body">

    <table class="table table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>شماره دسته</th>
                <th>نام دسته</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <a href="@Url.Action("DeleteCategory","Admin",new { id = category.Id})" class="btn btn-danger btn-xs">
                            <span class="glyphicon glyphicon-remove-circle" title="حذف"></span>
                        </a>
                        <a href="@Url.Action("EditCategory","Admin",new { id = category.Id})" class="btn btn-primary btn-xs">
                            <span class="glyphicon glyphicon-pencil" title="ویرایش"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
