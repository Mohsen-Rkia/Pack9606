<div class="panel-heading">
    <h3 class="panel-title">لیست اعضا</h3>
</div>

<div class="panel-body">
    <table class="table table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>شماره اعضا</th>
                <th>نام</th>
                <th>نام خانوادگی</th>
                <th>نام کاربری</th>
                <th>آدرس ایمیل</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td>@member.Id</td>
                    <td>@member.Name</td>
                    <td>@member.LastName</td>
                    <td>@member.UserName</td>
                    <td>@member.Email</td>
                    <td>
                        <a href="@Url.Action("Delete","Registering",new { id = member.Id})" class="btn btn-danger btn-xs">
                            <span class="glyphicon glyphicon-remove-circle" title="حذف"></span>
                        </a>
                        <a href="@Url.Action("Edit","Registering",new { id = member.Id})" class="btn btn-primary btn-xs">
                            <span class="glyphicon glyphicon-pencil" title="ویرایش"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

